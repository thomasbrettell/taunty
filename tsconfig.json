{
  "compilerOptions": {
    "checkJs": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["bin.ts"]
}
